<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
 	<%= javascript_include_tag :defaults %>
	<%= stylesheet_link_tag 'stylePage', :media => 'screen' %>
    <%= csrf_meta_tag %>
</head>

<body>

		<div id="logo">
						
			<% if signed_in? %>	
			<div id="menu">
				<ul>
			      <li><%= link_to "Home", root_path %></li>
			      <li><%= link_to "Profile", current_user %></li>
			      <li><%= link_to "Contacts", users_path %></li>
			      <li><%= link_to "Calendar", calendar_path %></li>
				  <li><%= link_to "Sign out", signout_path, :method => :delete %></li>

				</ul>
			</div>
		    <% else %>
				<div id="menu">
		    <li><%= link_to "Sign in", signin_path %></li>
				</div>
		    <% end %>
	</div>




	<div id="page">
    <%= yield %>		      
	</div>
	
</body>

<div id="footer">
	<p>Copyright (c) 2011 www.gammaphibeta.com. All rights reserved.</p>
</div>

</html>
<%= debug(params) if Rails.env.development? %>
